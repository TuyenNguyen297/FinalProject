<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:d="http://xamarin.com/schemas/2014/forms/design" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Desalination.MainPage">

    <ContentPage.Resources>
        <StyleSheet Source="style.css" />
    </ContentPage.Resources>

    <!--STATUS BAR-->
    <StackLayout BackgroundColor="Black">
        <Frame x:Name="Panel" Margin="0" Padding="0" CornerRadius="10" BackgroundColor="Black" HorizontalOptions="Fill">
            <Grid RowSpacing="0" StyleClass="sttBar" ColumnSpacing="0" Margin="0" Padding="0" VerticalOptions="Fill" HorizontalOptions="Fill">
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Image x:Name="wifiImg" StyleClass="Img" Source="" WidthRequest="36" HeightRequest="36" Margin="2,2,2,0" />
                <Label Grid.Column="1" Text="ĐIỆN THOẠI" VerticalTextAlignment="Center" VerticalOptions="Center" />
                <Label Grid.Column="2" Text=" MÁY LỌC  " VerticalTextAlignment="Center" VerticalOptions="Center" />
                <Image Grid.Column="3" x:Name="espImg" StyleClass="Img" Source="" WidthRequest="36" HeightRequest="36" Margin="2,2,2,0" />
            </Grid>
        </Frame>

        <!--HIỂN THỊ THÔNG SỐ VÀ BUTTON-->
        <Frame Margin="0,0,0,0" Padding="0" BackgroundColor="Transparent" CornerRadius="10" VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
            <Grid RowSpacing="1" ColumnSpacing="0" Margin="0" Padding="0" VerticalOptions="Fill" HorizontalOptions="Fill">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="4*" />
                </Grid.ColumnDefinitions>

                <BoxView StyleClass="boxView" HorizontalOptions="FillAndExpand" />
                <Label StyleClass="Title" Text="Trạng thái" HorizontalTextAlignment="Center" HorizontalOptions="Fill" />
                <Label Grid.Column="1" x:Name="Status" StyleClass="Value" Text="" VerticalOptions="FillAndExpand" VerticalTextAlignment="Center" HorizontalOptions="Fill" HorizontalTextAlignment="Center" />

                <!--<BoxView Grid.Row="1" StyleClass="boxView" HorizontalOptions="FillAndExpand" Color="LightSkyBlue" />
                <Label Grid.Row="1" Text="Lưu lượng (l/m)" StyleClass="Title" HorizontalTextAlignment="Center" HorizontalOptions="Fill" />
                <Label Grid.Row="1" Grid.Column="1" x:Name="FlowRate" StyleClass="Value" Text="" VerticalOptions="FillAndExpand" VerticalTextAlignment="Center" HorizontalOptions="Fill" HorizontalTextAlignment="Center" />-->

                <BoxView Grid.Row="1" StyleClass="boxView" HorizontalOptions="FillAndExpand" Color="LightSkyBlue" />
                <Label Grid.Row="1" StyleClass="Title" Text="Thể tích (l)" HorizontalTextAlignment="Center" HorizontalOptions="Fill" />
                <Label Grid.Row="1" Grid.Column="1" x:Name="Volume" StyleClass="Value" Text="" VerticalOptions="FillAndExpand" VerticalTextAlignment="Center" HorizontalOptions="Fill" HorizontalTextAlignment="Center" />

                <BoxView Grid.Row="2" StyleClass="boxView" HorizontalOptions="FillAndExpand" Color="LightSkyBlue" />
                <Label Grid.Row="2" StyleClass="Title" Text="TDS (ppm)" HorizontalTextAlignment="Center" HorizontalOptions="Fill" />
                <Label Grid.Row="2" Grid.Column="1" x:Name="TDS" StyleClass="Value" Text="" VerticalOptions="FillAndExpand" VerticalTextAlignment="Center" HorizontalOptions="Fill" HorizontalTextAlignment="Center" />

                <BoxView Grid.Row="3" StyleClass="boxView" HorizontalOptions="FillAndExpand" Color="LightSkyBlue" />
                <Label Grid.Row="3" StyleClass="Title" Text="Độ mặn (%)" HorizontalTextAlignment="Center" HorizontalOptions="Fill" />
                <Label Grid.Row="3" Grid.Column="1" x:Name="Salinity" StyleClass="Value" Text="" VerticalOptions="FillAndExpand" VerticalTextAlignment="Center" HorizontalOptions="Fill" HorizontalTextAlignment="Center" />

                <BoxView Grid.Row="4" StyleClass="boxView" HorizontalOptions="FillAndExpand" Color="LightSkyBlue" />
                <Label Grid.Row="4" StyleClass="Title" Text="Chất lượng" HorizontalTextAlignment="Center" HorizontalOptions="Fill" />
                <Label Grid.Row="4" Grid.Column="1" x:Name="Quality" StyleClass="Value" Text="" VerticalOptions="FillAndExpand" VerticalTextAlignment="Center" HorizontalOptions="Fill" HorizontalTextAlignment="Center" />

            </Grid>
        </Frame>

        <StackLayout Spacing="0">
            <Button StyleClass="cmdbtn" x:Name="CMDbtn" HorizontalOptions="Fill" Clicked="btn_Click" />
            <!--<Button StyleClass="cmdbtn" x:Name="Add1btn" HorizontalOptions="Fill" Clicked="Btn1_Click" />
            <Button StyleClass="cmdbtn" x:Name="Add2btn" HorizontalOptions="Fill" Clicked="Btn2_Click" />-->
        </StackLayout>
        
    </StackLayout>
</ContentPage>
